.footer
  //styles
  height: 140px
  width 100%
  background-color: #3c3c3c
  display flex
  justify-content center
  align-items center
#footer_media
  text-decoration none
  color #8f8f8f
  font-size 13px
#footer_made
  color #8f8f8f
  font-size 12px
.footer_social
  display flex
  flex-direction column
  justify-content: space-around
  align-items: center
  width 100%
  height 140px
  background-color #3c3c3c
#footer_icon
  display: flex
  flex-direction row
  height 41px
  width 215px
.icon
  background-image: url("./images/icons-foto.png")
  height 36px
  width 36px
  margin 3px
.footer_link
  height 36px
  width 36px
  margin 3px
  position relative
  display block
#icon-twitter
  background-position 203px 1183px
#icon-twitter:hover
  background-position 201px 1004px
#icon-facebook
  background-position 481px 1140px
#icon-facebook:hover
  background-position 480px 962px
#icon-YouTube
