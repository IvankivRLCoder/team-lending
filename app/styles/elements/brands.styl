.brands
  // height 90px
  display flex
  flex-direction column
  align-items stretch
  padding: 10px 0
  // border-bottom 2px solid #424040
  &__title
    display flex
    flex-direction row
    align-items stretch
    padding-top 15px
    font-size 10pt
  &__list
    display flex
    flex-direction row
    justify-content space-between
    font-size 9pt
    height 60px
  &__item
    display flex
    flex-direction nowrap column
    justify-content space-between
    align-items center
    &:first-child
      padding-left: 15px
  &__icon
    display flex
    width 30px
    height 30px
    border-radius 10px
    border 2px solid #4E4E4E
    background-color #4E4E4E
  &__name
    display flex
    padding-left 5px
